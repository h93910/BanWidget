<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/open"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dongli_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="农历"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气无数据"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/check"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_check_box_black_24dp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jieri_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:minLines="2"
            android:text="111111111111111111111111111111111111111111111111111111111111111111111111111"
            android:textColor="#ff0000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/click_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="ct"
            android:textColor="#55ffffff"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>